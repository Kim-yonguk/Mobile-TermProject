<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1a1a1.lifelogger.MainActivity">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/kakao"/>


    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="이 벤 트"
        android:id="@+id/btn_event"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_event" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="분석 및 통계"
        android:id="@+id/btn_stats"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_event"
        android:layout_alignLeft="@+id/btn_event"
        android:layout_alignStart="@+id/btn_event"
        android:onClick="onClick_stats"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="지 도"
        android:id="@+id/btn_map"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_stats"
        android:layout_alignLeft="@+id/btn_stats"
        android:layout_alignStart="@+id/btn_stats"
        android:onClick="onClick_map"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="목표 관리"
        android:id="@+id/btn_my"
        android:layout_below="@+id/btn_map"
        android:layout_alignLeft="@+id/btn_map"
        android:layout_alignStart="@+id/btn_map"
        android:layout_marginTop="50dp" />
</RelativeLayout>
